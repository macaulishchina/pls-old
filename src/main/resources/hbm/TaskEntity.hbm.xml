<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="top.macaulish.PLS.entity.TaskEntity" table="task" schema="pls">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="guid">
            <column name="guid" sql-type="char(36)" length="36"/>
        </property>
        <property name="taskname">
            <column name="taskname" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="state">
            <column name="state" sql-type="varchar(10)" length="10"/>
        </property>
        <property name="targetModel">
            <column name="target_model" sql-type="char(36)" length="36" not-null="true"/>
        </property>
        <property name="ftpInfoId" insert="false" update="false">
            <column name="ftp_info_id" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="autoDownload">
            <column name="auto_download" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="downloadPath" >
            <column name="download_path" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="createTime">
            <column name="create_time" sql-type="datetime" not-null="true"/>
        </property>
        <property name="creatorId" insert="false" update="false">
            <column name="creator_id" sql-type="int(11)"/>
        </property>
        <many-to-one name="ftpInfoByFtpInfoId" class="top.macaulish.PLS.entity.FtpInfoEntity">
            <column name="ftp_info_id"  not-null="true"/>
        </many-to-one>
        <many-to-one name="userByCreatorId" class="top.macaulish.PLS.entity.UserEntity">
            <column name="creator_id"/>
        </many-to-one>
    </class>
</hibernate-mapping>